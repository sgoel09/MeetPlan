<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".meetups.MeetupsFragment">

    <TextView
        android:id="@+id/tvAcceptedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/rvInvited"
        android:text="Upcoming meetups" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvMeetups"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAcceptedLabel" />

    <TextView
        android:id="@+id/tvInvitedLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invited Meetups" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvInvited"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvInvitedLabel" />

</RelativeLayout>